
@{
    ViewData["Title"] = "TitleList";
}


@using MistralTrialWeb.ViewModels;
@model HomeTitleListVM



<div id="container">
    <a class="btn btn-primary" href="/">Home</a>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title name</th>
                <th>Average rating</th>
                <th>Your rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.rows)
            {
                <tr>
                    <td><img style="width:3pc;height:auto;" src="@Url.Action("ViewImage", "Home", new { ImageId = x.ImageId })" alt="Nema sliku" /></td>
                    <td>@x.Name</td>
                    <td>@x.AverageGrade / 5</td>
                    <td>
                        <form id="rating" action="RateTitle" method="post">
                            <input type="number" name="titleId" id="titleId" value="@x.Id" hidden />
                            <input type="number" class="form-control" style="width:5pc;" name="rate" id="rate" placeholder="@x.Rating" min="1" max="5" />
                            <input type="submit" style="width:5pc" class="btn" id="yourRate" value="Rate"/>
                            <input name="type" value="@Model.titleType" hidden />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script>

    
</script>

<style>
    #container{
        width:50%;
        right:0;
        left:0;
        margin:auto;
    }
</style>